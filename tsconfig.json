{
  "compilerOptions": {
    // phương thức khởi tạo module, nodejs sử dung commonjs
    "module": "commonjs",
    // sử dụng import thay vi required
    "esModuleInterop": true,
    // version
    "target": "ES2020",
    "noImplicitAny": false,
    // chặn tạo file js.map
    "sourceMap": false,
    // thu muc file js sau khi c
    "outDir": "dist",
    "skipLibCheck": true,
    // add them de su dung sequelize-typescript
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // end sequelize-typescript
    "resolveJsonModule": true,
    // loai bo cac comment trong ts khi convert qua js
    "removeComments": true
  },
  "include": ["src/**/*"]
}
